= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :artist
    -# = f.text_field :artist?
    %p= @album.artist.name
    -# %p= @artist.name
    =f.hidden_field :artist_id, value: @album.artist.id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :genre
    = f.text_field :genre
  .actions
    = f.submit 'Save'
